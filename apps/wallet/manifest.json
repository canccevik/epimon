{
  "manifest_version": 3,
  "name": "Epimon Wallet",
  "version": "1.0.0",
  "description": "A lightweight cryptocurrency wallet, ensuring security and accessibility for all users.",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "icons": {
    "16": "public/images/icon.ico",
    "32": "public/images/icon.ico"
  }
}
